<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>StoreServlet</servlet-name>
        <servlet-class>com.lizhijian.j2ee.servlet.shop.StoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreServlet</servlet-name>
        <url-pattern>/shop/store</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>com.lizhijian.j2ee.servlet.shop.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/shop/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.lizhijian.j2ee.servlet.login.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DaoLoginServlet</servlet-name>
        <servlet-class>com.lizhijian.j2ee.servlet.daoDemo.DaoLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DaoLoginServlet</servlet-name>
        <url-pattern>/daoDemo/login</url-pattern>
    </servlet-mapping>
</web-app>